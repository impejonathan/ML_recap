FROM python:3.11-slim

WORKDIR /app

COPY requirements.txt /app

RUN pip install --upgrade pip && \
    pip install -r requirements.txt

COPY . /app

CMD ["python", "manage.py", "runserver", "0.0.0.0:80" ]


# localhost CMD ["python", "manage.py", "runserver", "localhost:80"] 

# CMD ["python", "manage.py", "runserver", "0.0.0.0:80"]